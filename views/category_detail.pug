extends layout 

block content 
  h1.header= category.name
  div.sideBySideButtons
    form(action=category.url + '/delete')
      input(type='submit', value='Delete')
    form(action=category.url + '/update')
      input(type='submit', value='Update')
  div
    ul
      each item in category_items 
        li 
          a(href=item.url) #{item.name}

