extends layout 

block content 
  h1#title= title

  form(method='POST' action='')
    label(for='name') Category
    input#name(type='text' placeholder='Fruit, Vegetable, etc' name='name' required='true' value=(undefined===category ? '' : category.name))
    label(for='description') Description
    textarea#description(name='description' value=(undefined===category ? '' : category.description))
    button(type='submit') Submit
  if errors 
    ul 
      for error in errors 
        li!= error.msg