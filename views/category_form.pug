extends layout 

block content 
  h1#title= title

  form(method='POST' action='')
    label(for='name') Category
    input#name(type='text' placeholder='Fruit, Vegetable, etc' name='name' required='true' value=(category===undefined ? '' : category.name))
    label(for='description') Description
    if category!==undefined
      textarea#description(name='description') #{category.description}
    else 
      textarea#description(name='description')
    button(type='submit') Submit
  if errors 
    ul 
      for error in errors 
        li!= error.msg